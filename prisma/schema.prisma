generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // As linhas url e directUrl foram removidas daqui
}

// ... seus models Product, User, etc. continuam aqui intactos
model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String
  image       String
  images      String[]
  stock       Int      @default(0)
  tag         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  password      String
  role          Role     @default(USER)
  isSocio       Boolean  @default(false)
  socioPlan     String?
  createdAt     DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}