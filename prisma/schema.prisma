generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // A URL foi removida daqui, conforme as novas regras do Prisma 7
}
// Modelo para a Loja
model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String
  image       String
  images      String[] // Array de strings para galeria
  stock       Int      @default(0)
  tag         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Modelo para o Sistema de Sócio e Login
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(USER)
  isSocio       Boolean   @default(false)
  socioPlan     String?   // Recruta, Sócio Sofredor, Lenda Verde
  createdAt     DateTime  @default(now())
}

enum Role {
  USER
  ADMIN
}